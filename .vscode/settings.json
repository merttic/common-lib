{
    "solidity.packageDefaultDependenciesContractsDirectory": "contracts",
    "solidity.packageDefaultDependenciesDirectory": "lib",
    "solidity.compileUsingRemoteVersion": "v0.8.20",
    "solidity.remappings": [
        "chainlink/=lib/chainlink/contracts/src/v0.8/",
        "ds-test/=lib/forge-std/lib/ds-test/src/",
        "forge-std/=lib/forge-std/src/",
        "openzeppelin-contracts/=lib/openzeppelin-contracts/",
        "ERC721A/=lib/ERC721A/contracts/",
        "ERC721A-Upgradeable/=lib/ERC721A-Upgradeable/contracts/",
        "contracts-upgradeable/=lib/openzeppelin-contracts-upgradeable/",
        "string-utils/=lib/solidity-stringutils/src",
        "era-contracts/=lib/era-contracts",
        "foundry-zksync-era/=lib/foundry-zksync-era",
        "account-abstraction/=lib/account-abstraction/contracts/"
    ],
    "editor.formatOnSave": true,
    "[solidity]": {
        "editor.defaultFormatter": "JuanBlanco.solidity"
    },
    "solidity.formatter": "forge",
}